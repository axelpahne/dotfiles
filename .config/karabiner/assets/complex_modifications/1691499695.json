{
  "title": "Change caps_lock to dual keys, escape and right_control.",
  "rules": [
    {
      "description": "Change caps_lock to right_control if pressed with other keys, change caps_lock to escape if pressed alone.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "right_control"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    }
  ]
}
